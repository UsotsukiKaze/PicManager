# 应用配置
APP_NAME=图片编号管理系统
APP_VERSION=0.1.0
DEBUG=false

# 数据库配置（开发环境使用 SQLite）
DATABASE_URL=sqlite:///./data/picmanager.db
# 生产环境建议使用 PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/picmanager

# API 配置
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# 安全配置（生产环境必须修改）
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
# API Key 认证（可选，留空则不需要认证）
API_KEY=

# CORS 配置（允许的域名，多个用逗号分隔）
ALLOWED_HOSTS=*

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
